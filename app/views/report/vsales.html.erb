<%= form_for(:posemails, url: vsaleschoice_path, html: {method: 'get'}) do |f| %>
 <label>* Start Date</label> <input id="datetimepicker1" name="posemails[startdate]" type="text" data-date-format="YYYY/MM/DD">
 <label>* End Date</label> <input id="datetimepicker2" name="posemails[enddate]" type="text" data-date-format="YYYY/MM/DD">
<%= f.submit 'search', class:"btn btn-primary btn-xs" %>
<% end %>
<hr>
<h3 class="text-center">Summary of Sales</h3>
<% if @vsbp != nil %>
<% if !@vsbp.empty? %>
<script src="http://code.highcharts.com/highcharts.js"></script>
<script src="http://code.highcharts.com/modules/exporting.js"></script>
<div class="col-lg-12">
        <div id="container"></div>  
        <!-- <div id="container2" style="min-width: 310px; height: 400px; margin: 0 auto"></div>     -->
</div>
<div class="col-lg-12">
        <!-- <div id="container"></div>  -->
        <div id="container2" style="min-width: 310px; height: 400px; margin: 0 auto"></div> 
</div>
<div class="col-lg-12">
        <!-- <div id="container"></div>  -->
        <div id="container3" style="min-width: 310px; height: 400px; margin: 0 auto"></div> 
</div>


<script type="text/javascript">
    $(function () {

    // Radialize the colors
    Highcharts.getOptions().colors = Highcharts.map(Highcharts.getOptions().colors, function (color) {
        return {
            radialGradient: { cx: 0.5, cy: 0.3, r: 0.7 },
            stops: [
                [0, color],
                [1, Highcharts.Color(color).brighten(-0.3).get('rgb')] // darken
            ]
        };
    });

    // Build the chart
    $('#container').highcharts({
        chart: {
            plotBackgroundColor: null,
            plotBorderWidth: null,
            plotShadow: false
        },
        title: {
            text: 'Category Quantity Shared <br> <%= "#{@end_date} - #{@start_date}" %> <br> Total : <% @total1 = 0 %> <% @vsbp.each do |id, prod| %> <% prod.map{|p| @total1+=p.QtyUsed.to_i } %>  <% end %> <%= @total1 %>'
        },
        tooltip: {
            pointFormat: '{series.name}: <b>{point.y:.f} </b>'
        },
        plotOptions: {
            pie: {
                allowPointSelect: true,
                cursor: 'pointer',
                dataLabels: {
                    enabled: true,
                    format: '<b>{point.name}</b>: {point.percentage:.1f} %',
                    style: {
                        color: (Highcharts.theme && Highcharts.theme.contrastTextColor) || 'black'
                    },
                    connectorColor: 'silver'
                }
            }
        },
        series: [{
            type: 'pie',
            name: 'Quantity Used',
            data: [
                <% @vsbp.each do |id, prod| %>
                ['<%= id %>',<% @p = 0 %> <% prod.map{|p| @p+=p.QtyUsed.to_i } %> <%= @p %> ],
                <% end %>
            ]
        }]
    });
 $('#container2').highcharts({
        chart: {
            plotBackgroundColor: null,
            plotBorderWidth: null,
            plotShadow: false
        },
        title: {
            text: 'Category Quantity Ordered <br> <%= "#{@end_date} - #{@start_date} - " %> <br>Total : <% @total1 = 0 %> <% @vsbp.each do |id, prod| %> <% prod.map{|p| @total1+=p.QtyOrdered.to_i } %>  <% end %> <%= @total1 %>'
        },
        tooltip: {
            pointFormat: '{series.name}: <b>{point.y:.f} </b>'
        },
        plotOptions: {
            pie: {
                allowPointSelect: true,
                cursor: 'pointer',
                dataLabels: {
                    enabled: true,
                    format: '<b>{point.name}</b>: {point.percentage:.1f} %',
                    style: {
                        color: (Highcharts.theme && Highcharts.theme.contrastTextColor) || 'black'
                    },
                    connectorColor: 'silver'
                }
            }
        },
        series: [{
            type: 'pie',
            name: 'Quantity Ordered',
            data: [
                <% @vsbp.each do |id, prod| %>
                ['<%= id %>',<% @p = 0 %> <% prod.map{|p| @p+=p.QtyOrdered.to_i } %> <%= @p %> ],
                <% end %>
            ]
        }]
    });
});

$(function () {
    $('#container3').highcharts({

        chart: {
            type: 'column'
        },

        title: {
            text: 'Total Quantity consumtion, grouped by used <br> <%= "#{@end_date} - #{@start_date} - " %>'
        },

        xAxis: {
            categories: ['Quantity Shared', 'Quantity Ordered']
        },

        yAxis: {
            allowDecimals: false,
            min: 0,
            title: {
                text: 'Number of units'
            }
        },

        tooltip: {
            formatter: function () {
                return '<b>' + this.x + '</b><br/>' + '<br/>' +
                    'Total: ' + this.point.stackTotal;
            }
        },

        plotOptions: {
            column: {
                stacking: 'normal'
            }
        },

        series: [{
            name: 'Total',
            data: [<% @total1 = 0 %> <% @vsbp.each do |id, prod| %> <% prod.map{|p| @total1+=p.QtyUsed.to_i } %>  <% end %> <%= @total1 %>, <% @total1 = 0 %> <% @vsbp.each do |id, prod| %> <% prod.map{|p| @total1+=p.QtyOrdered.to_i } %>  <% end %> <%= @total1 %>],
            stack: 'male'
        },
        ]
    });
});




</script>
<% else %>
<div class="well">
   <label>Period : </label> <%= @end_date %> - <%= @start_date %>
</div>
Nothing to show with the given data
<% end %>
<% else %>
Please select Date Range first to show the data
<% end %>
<script>
 $(function () {
    $('#datetimepicker1').datetimepicker({
        pickTime: false
    });
        $('#datetimepicker2').datetimepicker({
        pickTime: false
    });
 });
</script>